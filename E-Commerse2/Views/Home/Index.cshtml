@model List<Product>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4  mb-4">
            <div class="card" style="width: 18rem;">
                <img src="~/images/@item.ImgUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h3>@item.Name</h3>
                        </div>
                        <div class="col-4"><span class="badge rounded-pill bg-light">@item.Rate/5</span></div>
                    </div>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <p>Price :<span class="badge rounded-pill bg-primary">@item.Price</span></p>
                    <a href="/Home/Details?productId=@item.Id" class="btn btn-primary">More Details</a>
                </div>
            </div>
        </div>
    }
</div>
