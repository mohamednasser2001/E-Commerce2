@model Company
<div class="row">
    <div class="col-12 mb-3"><h2> <a href="/Company/Index"><i class="bi bi-arrow-bar-left"></i></a>  Create New Company</h2></div>

</div>

<div>

    <form asp-action="Create" asp-controller="Company">
        <input asp-for="Id" type="hidden" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label">CompanyName</label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input class="form-control" asp-for="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input class="form-control" asp-for="Address">
            <span asp-validation-for="Address"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>






</div>
@section Scripts {

    <partial name="_ViewImports.cshtml"></partial>
}


