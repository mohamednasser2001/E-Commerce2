@model Category
<div class="row">
    <div class="col-12 mb-3"><h2> <a href="/Category/Index"><i class="bi bi-arrow-bar-left"></i></a>  Create New Category</h2></div>
  
</div>

<div>

    <form action="/Category/Create" method="post">
        <div class="mb-3">
            <label for="CategoryName" class="form-label">CategoryName</label>
            <input type="text" class="form-control" id="CategoryName" name="Name" value="@Model.Name">
            <span asp-validation-for="Name"></span>
          
        </div>
     
        <button type="submit" class="btn btn-primary">Save</button>
    </form>


 


 
</div>
